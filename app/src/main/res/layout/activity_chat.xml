<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChatActivity"
    android:background="@drawable/chat_background">
    <!-- PERUBAHAN 1: Tambahkan background ke root layout -->

    <!-- Toolbar untuk menampilkan info kontak -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_chat"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@android:color/white" />

    <!-- Area input pesan di bawah -->
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/et_message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:hint="Ketik pesan"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/btn_send_message"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_send_button"
            android:contentDescription="Kirim Pesan"
            android:src="@drawable/ic_send"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Daftar pesan di tengah -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/input_layout"
        android:layout_below="@id/toolbar_chat"
        android:padding="8dp"
        android:background="@android:color/transparent"
        tools:listitem="@layout/item_message_sent" />
    <!-- PERUBAHAN 2: Buat RecyclerView transparan -->

</RelativeLayout>
