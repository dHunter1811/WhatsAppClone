<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Day Mode. -->
    <style name="Base.Theme.WhatsAppClone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna Utama Aplikasi -->
        <item name="colorPrimary">@color/wa_green_dark</item>
        <item name="colorPrimaryVariant">@color/wa_green_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna Sekunder (misalnya untuk FAB) -->
        <item name="colorSecondary">@color/wa_green_accent</item>
        <item name="colorSecondaryVariant">@color/wa_green_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Warna Status Bar -->
        <item name="android:statusBarColor">@color/wa_green_dark</item>

        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.WhatsAppClone" parent="Base.Theme.WhatsAppClone" />

    <style name="App.BottomNavigationView.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
</resources>
